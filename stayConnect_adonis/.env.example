# Docker Environment Configuration
# Copy this file to .env and update the values as needed

# Application
APP_KEY=your-32-character-secret-key-here-change-this
NODE_ENV=production
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=info
TZ=UTC

# Database Configuration (matches docker-compose.yml)
DB_HOST=postgres
DB_PORT=5432
DB_USER=stayconnect_user
DB_PASSWORD=stayconnect_password
DB_DATABASE=stayconnect_db

# Session
SESSION_DRIVER=cookie

# Redis (if using)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Mail Configuration (update with your SMTP settings)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# External APIs
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Security
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3333

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=/app/uploads