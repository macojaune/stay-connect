{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./inertia/*"
      ],
      "#contracts/*": [
        "./app/contracts/*.ts",
        "./app/contracts/*.js"
      ],
      "#constants/*": [
        "./app/constants/*.ts",
        "./app/constants/*.js"
      ],
      "#jobs/*": [
        "./app/jobs/*.ts",
        "./app/jobs/*.js"
      ]
    }
  },
  "exclude": [
    "../inertia/**/*",
    "node_modules",
    "build"
  ]
}
